generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

// Enum for strict status handling
enum OrderStatus {
  PENDING
  ROUTING
  BUILDING
  SUBMITTED
  CONFIRMED
  FAILED
}

model Order {
  id      Int     @id @default(autoincrement())
  orderId String  @unique // Public ID shared with client
  userId  String? // Optional for now

  // Order Details
  tokenIn  String
  tokenOut String
  amountIn Float

  // Execution Details
  status         OrderStatus @default(PENDING)
  selectedDex    String? // 'Raydium' or 'Meteora'
  executionPrice Float?
  txHash         String?
  failureReason  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders") // Map model to 'orders' table in DB
}
